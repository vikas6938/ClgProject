{
    "name": "hackathon-backend-service",
    "version": "1.0.0",
    "description": "It is a backend service for hackathon project",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node src/server.js",
        "dev": "cross-env NODE_ENV=dev nodemon src/server.js",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky install",
        "test": "cross-env NODE_ENV=test mocha --require esm './tests/*/*.spec.js'",
        "test:customer": "cross-env NODE_ENV=test mocha --require esm './tests/customers/*.spec.js'",
        "test:user": "cross-env NODE_ENV=test mocha --require esm './tests/*/user.spec.js'",
        "test:login": "cross-env NODE_ENV=xtest mocha --require esm './tests/*/login.spec.js'"
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "chai": "^4.3.10",
        "chai-http": "^4.4.0",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "esm": "^3.2.25",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "mocha": "^10.2.0",
        "nodemon": "^3.0.1",
        "prettier": "3.0.3"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.0.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^5.2.0",
        "mongoose": "^8.0.0",
        "multer": "^1.4.5-lts.1",
        "winston": "^3.11.0"
    }
}
